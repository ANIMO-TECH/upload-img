{
  "$schema": "https://schema.tauri.app/config/2",
  "productName": "ImageUploadTool",
  "version": "0.1.0",
  "identifier": "com.upload-img.app",
  "build": {
    "beforeDevCommand": "npm run dev",
    "devUrl": "http://localhost:3001",
    "beforeBuildCommand": "npm run build",
    "frontendDist": "../out"
  },
  "app": {
    "windows": [
      {
        "title": "ImageUploadTool",
        "width": 1200,
        "height": 800,
        "resizable": true,
        "fullscreen": false
      }
    ],
    "security": {
      "csp": "default-src 'self'; connect-src 'self' http://https://*; img-src 'self' http://https://* data:; style-src 'self' 'unsafe-inline'"
    }
  },
  "bundle": {
    "active": true,
    "targets": "all",
    "icon": [
      "icons/32x32.png",
      "icons/128x128.png",
      "icons/128x128@2x.png",
      "icons/icon.icns",
      "icons/icon.ico"
    ],
    "publisher": "ImageUploadTool",
    "shortDescription": "A simple image upload tool",
    "longDescription": "ImageUploadTool is a cross-platform desktop application for uploading images to various services."
  },
  "plugins": {
    "shell": {
      "open": true
    }
  }
}
